<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.split.first.repository.ListRepository">


    <resultMap id="saleResultMap" type="java.util.HashMap">
        <id property="serial" column="serial" />
        <result property="user" column="user"/>
        <result property="title" column="title"/>
        <result property="category" column="category"/>
        <result property="detail" column="detail"/>
        <result property="registeredDate" column="registered_date"/>
        <result property="expiration" column="expiration"/>
        <result property="quantity" column="quantity"/>
        <result property="remainQuantity" column="remain_quantity"/>
        <result property="maxPurchase" column="max_purchase"/>
        <collection property="saleImageList" javaType="java.util.ArrayList" resultMap="saleImageResultMap"/>
    </resultMap>

    <resultMap id="saleImageResultMap" type="java.util.HashMap">
        <id property="serial" column="serial"/>
        <result property="uri" column="uri"/>
    </resultMap>

    <select id="selectSales" resultMap="saleResultMap">
            SELECT S.serial, S.user, S.title, S.category, S.detail, S.detail, S.location,
            S.registered_date, S.expiration, S.quantity, S.remain_quantity, S.max_purchase,
            S.price, S.status, sale_image.serial FROM (select * from sale limit 12) S
            LEFT JOIN sale_image ON S.serial = sale_image.serial and S.status = '0' ORDER BY S.serial desc;
    </select>
    


    <select id="selectSaleCategory" parameterType="java.util.HashMap" resultType="hashmap">
        <![CDATA[
            SELECT
                *
            FROM
                sale
            WHERE
                status = '0'
            AND
                category = #{category}
            ORDER BY
                serial
            desc
        ]]>
    </select>


    <select id="selectOneSale" parameterType="java.util.HashMap" resultType="hashmap">
        <![CDATA[
            SELECT
                *
            FROM
                sale
            WHERE
                status = '0'
            AND
                serial = #{serial}
        ]]>
    </select>

    <select id="selectSaleImage" parameterType="java.util.HashMap" resultType="hashmap">
        <![CDATA[
            SELECT
                saleImg
            FROM
                saleImage
            WHERE
                serial = #{serial}
            ORDER BY
                serial
            desc
        ]]>
    </select>


    <select id="selectTrips" parameterType="java.util.HashMap" resultType="hashmap">
        <![CDATA[
            SELECT
                *
            FROM
                trip
            WHERE
                status = '0'
            ORDER BY
                serial
            desc
        ]]>
    </select>


    <select id="selectTripCategory" parameterType="java.util.HashMap" resultType="hashmap">
        <![CDATA[
            SELECT
                *
            FROM
                trip
            WHERE
                status = '0'
            AND
                category = #{category}
            ORDER BY
                serial
            desc
        ]]>
    </select>

    <select id="selectOneTrip" parameterType="java.util.HashMap" resultType="hashmap">
        <![CDATA[
            SELECT
                *
            FROM
                trip
            WHERE
                status = '0'
            AND
                serial = #{serial}
        ]]>
    </select>


    <resultMap id="requestResultMap" type="java.util.HashMap">
        <id property="serial" column="serial" />
        <result property="user" column="user"/>
        <result property="title" column="title"/>
        <result property="category" column="category"/>
        <result property="detail" column="detail"/>
        <result property="registeredDate" column="registered_date"/>
        <result property="expiration" column="expiration"/>
        <result property="quantity" column="quantity"/>
        <result property="remainQuantity" column="remain_quantity"/>
        <result property="maxPurchase" column="max_purchase"/>
        <collection property="saleImageList" javaType="java.util.ArrayList" resultMap="requestImageResultMap"/>
    </resultMap>

    <resultMap id="requestImageResultMap" type="java.util.HashMap">
        <id property="serial" column="serial"/>
        <result property="uri" column="uri"/>
    </resultMap>


    <select id="selectRequests" parameterType="java.util.HashMap" resultMap="requestResultMap">
        <![CDATA[
            SELECT
                *
            FROM
                request
            WHERE
                status = '0'
            ORDER BY
                serial
            desc
        ]]>
    </select>

    <select id="selectRequestCategory" parameterType="java.util.HashMap" resultType="hashmap">
        <![CDATA[
            SELECT
                *
            FROM
                request
            WHERE
                status = '0'
            AND
                category = #{category}
            ORDER BY
                serial
            desc
        ]]>
    </select>

    <select id="selectOneRequest" parameterType="java.util.HashMap" resultType="hashmap">
        <![CDATA[
            SELECT
                *
            FROM
                request
            WHERE
                status = '0'
            AND
                serial = #{serial}
        ]]>
    </select>


    <select id="selectRequestImage" parameterType="java.util.HashMap" resultType="hashmap">
        <![CDATA[
            SELECT
                requestImg
            FROM
                requestImage
            WHERE
                serial = #{serial}
            ORDER BY
                serial
            desc
        ]]>
    </select>


    <insert id="insertComment" parameterType="java.util.HashMap">
        <![CDATA[
        INSERT INTO comments
        (
            userSerial,
            itemSerial,
            text,
            registerDate,
            type
        )
        VALUES
        (
            #{userSerial},
            #{itemSerial},
            #{text},
            #{registerDate},
            #{type}
        )
    ]]>
    </insert>


    <delete id="deleteComment" parameterType="java.util.HashMap">
        <![CDATA[
        DELETE FROM comments
        WHERE
            type = #{type}
        AND
            itemSerial = #{itemSerial}
        AND
            userSerial = #{userSerial}
        AND
            serial = #{serial}
    ]]>
    </delete>


    <select id="selectComment" parameterType="java.util.HashMap" resultType="hashmap">
        SELECT
            *
        FROM
            comments
        WHERE
            type = #{type}
        AND
            itemSerial = #{itemSerial}
        ORDER BY
            serial
    </select>



    <!--게시글 업로드 관련-->
    <insert id="insertSale" parameterType="java.util.HashMap">
        <![CDATA[
        INSERT INTO sale
        (
            user,
            title,
            category,
            detail,
            location,
            registerDate,
            expiration,
            quantity,
            remainQuantity,
            maxPurchase,
            price,
            status
        )
        VALUES
        (
            #{user},
            #{title},
            #{category},
            #{detail},
            #{location},
            #{registerDate},
            #{expiration},
            #{quantity},
            #{remainQuantity},
            #{maxPurchase},
            #{price},
            '0'
        )
    ]]>
    </insert>

    <insert id="insertSaleImage" parameterType="java.util.HashMap">
        <![CDATA[
        INSERT INTO saleImage
        (
            serial,
            saleImg
        )
        VALUES
        (
            (SELECT serial
            FROM sale
            WHERE registerDate = #{registerDate}
            AND title = #{title}
            LIMIT 1),
            #{imagePath}
        )
    ]]>
    </insert>



    <insert id="insertRequest" parameterType="java.util.HashMap">
        <![CDATA[
        INSERT INTO request
        (
            user,
            title,
            category,
            detail,
            location,
            registerDate,
            expiration,
            quantity,
            price,
            serviceFee,
            status
        )
        VALUES
        (
            #{user},
            #{title},
            #{category},
            #{detail},
            #{location},
            #{registerDate},
            #{expiration},
            #{quantity},
            #{price},
            #{serviceFee},
            '0'
        )
    ]]>
    </insert>

    <insert id="insertRequestImage" parameterType="java.util.HashMap">
        <![CDATA[
        INSERT INTO requestImage
        (
            serial,
            requestImg
        )
        VALUES
        (
            (SELECT serial
            FROM request
            WHERE registerDate = #{registerDate}
            AND title = #{title}
            LIMIT 1),
            #{imagePath}
        )
    ]]>
    </insert>

    <insert id="insertTrip" parameterType="java.util.HashMap">
        <![CDATA[
        INSERT INTO trip
        (
            user,
            source,
            destination,
            isRound,
            purpose,
            departureDate,
            arrivalDate,
            registerDate,
            schedule,
            location,
            status
        )
        VALUES
        (
            #{user},
            #{source},
            #{destination},
            #{isRound},
            #{purpose},
            #{departureDate},
            #{arrivalDate},
            #{registerDate},
            #{schedule},
            #{location},
            '0'
        )
    ]]>
    </insert>
</mapper>