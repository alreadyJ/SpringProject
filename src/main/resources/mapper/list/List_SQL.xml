<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="common.first.dao.ListDAO">
    <select id="selectSales" parameterType="java.util.HashMap" resultType="hashmap">
        <![CDATA[
            SELECT
                *
            FROM
                sale
            WHERE
                status = '0'
            ORDER BY
                serial
            desc
        ]]>
    </select>

    <select id="selectSalesImages" parameterType="java.util.HashMap" resultType="hashmap">
        <![CDATA[
            SELECT
                salesImg
            FROM
                salesImage
            WHERE
                serial = #{serial}
            ORDER BY
                serial
            desc
        ]]>
    </select>

</mapper>