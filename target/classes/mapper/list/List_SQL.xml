<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="common.first.dao.ListDAO">
    <select id="selectSale" parameterType="java.util.HashMap" resultType="hashmap">
        <![CDATA[
            SELECT
                *
            FROM
                sale
            WHERE
                status = '0'
            ORDER BY
                serial
            desc
        ]]>
    </select>

    <select id="selectSaleImage" parameterType="java.util.HashMap" resultType="hashmap">
        <![CDATA[
            SELECT
                saleImg
            FROM
                saleImage
            WHERE
                serial = #{serial}
            ORDER BY
                serial
            desc
        ]]>
    </select>


    <select id="selectTrip" parameterType="java.util.HashMap" resultType="hashmap">
        <![CDATA[
            SELECT
                *
            FROM
                trip
            WHERE
                status = '0'
            ORDER BY
                serial
            desc
        ]]>
    </select>



    <select id="selectRequest" parameterType="java.util.HashMap" resultType="hashmap">
        <![CDATA[
            SELECT
                *
            FROM
                request
            WHERE
                status = '0'
            ORDER BY
                serial
            desc
        ]]>
    </select>

    <select id="selectRequestImage" parameterType="java.util.HashMap" resultType="hashmap">
        <![CDATA[
            SELECT
                requestImg
            FROM
                requestImage
            WHERE
                serial = #{serial}
            ORDER BY
                serial
            desc
        ]]>
    </select>

</mapper>