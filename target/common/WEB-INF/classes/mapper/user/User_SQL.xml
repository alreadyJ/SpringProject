<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">
    <select id="selectMember" parameterType="hashmap" resultType="hashmap">
        <![CDATA[
            SELECT
                count(*) cnt,
                m_id,
                m_name,
                profile_img,
                point,
                level,
                attend_flag,
                join_date
            FROM
                userInfo
            WHERE
                m_id = #{id}
                AND
                m_pass = #{password}
        ]]>
    </select>

    <select id="selectUserExist" parameterType="hashmap" resultType="hashmap">
        <![CDATA[
            SELECT
                count(*) cnt
            FROM
                user
            WHERE
                email = #{email}
        ]]>
    </select>

    <select id="selectLogin" parameterType="hashmap" resultType="hashmap">
        <![CDATA[
            SELECT
                count(*) cnt,
                email,
                nickName,
                profileImg,
                signUpDate
            FROM
                user
            WHERE
                email = #{email}
            AND
                password = #{password}
        ]]>
    </select>




    <insert id="insertUser" parameterType="hashmap">
        <![CDATA[
        INSERT INTO user
        (
            email,
            password,
            nickName,
            profileImg,
            signUpDate
        )
        VALUES
        (
            #{email},
            #{password},
            #{nickName},
            '',
            #{signUpDate}
        )
    ]]>
    </insert>

</mapper>